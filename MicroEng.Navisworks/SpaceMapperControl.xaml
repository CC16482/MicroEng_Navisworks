<UserControl x:Class="MicroEng.Navisworks.SpaceMapperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:MicroEng.Navisworks"
             xmlns:system="clr-namespace:System;assembly=System"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="{DynamicResource ApplicationBackgroundBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             FontSize="12">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="{x:Static local:MicroEngResourceUris.WpfUiRoot}" />
            </ResourceDictionary.MergedDictionaries>
            <system:Double x:Key="ControlContentThemeFontSize">12</system:Double>
            <x:Array x:Key="TargetDefinitions" Type="{x:Type local:SpaceMapperTargetDefinition}">
                <local:SpaceMapperTargetDefinition>EntireModel</local:SpaceMapperTargetDefinition>
                <local:SpaceMapperTargetDefinition>CurrentSelection</local:SpaceMapperTargetDefinition>
                <local:SpaceMapperTargetDefinition>SelectionSet</local:SpaceMapperTargetDefinition>
                <local:SpaceMapperTargetDefinition>SearchSet</local:SpaceMapperTargetDefinition>
                <local:SpaceMapperTargetDefinition>SelectionTreeLevel</local:SpaceMapperTargetDefinition>
            </x:Array>
            <x:Array x:Key="MembershipModes" Type="{x:Type local:SpaceMembershipMode}">
                <local:SpaceMembershipMode>ContainedOnly</local:SpaceMembershipMode>
                <local:SpaceMembershipMode>PartialOnly</local:SpaceMembershipMode>
                <local:SpaceMembershipMode>ContainedAndPartial</local:SpaceMembershipMode>
            </x:Array>
            <x:Array x:Key="WriteModes" Type="{x:Type local:WriteMode}">
                <local:WriteMode>Overwrite</local:WriteMode>
                <local:WriteMode>OnlyIfBlank</local:WriteMode>
                <local:WriteMode>Append</local:WriteMode>
            </x:Array>
            <x:Array x:Key="CombineModes" Type="{x:Type local:MultiZoneCombineMode}">
                <local:MultiZoneCombineMode>First</local:MultiZoneCombineMode>
                <local:MultiZoneCombineMode>Concatenate</local:MultiZoneCombineMode>
                <local:MultiZoneCombineMode>Min</local:MultiZoneCombineMode>
                <local:MultiZoneCombineMode>Max</local:MultiZoneCombineMode>
                <local:MultiZoneCombineMode>Average</local:MultiZoneCombineMode>
            </x:Array>
        </ResourceDictionary>
    </UserControl.Resources>

    <ui:NavigationView x:Name="SpaceMapperNav"
                       PaneDisplayMode="LeftFluent"
                       IsBackButtonVisible="Collapsed"
                       IsPaneToggleVisible="False"
                       IsPaneOpen="True"
                       ScrollViewer.VerticalScrollBarVisibility="Disabled"
                       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                       Background="{DynamicResource ApplicationBackgroundBrush}"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}">
        <ui:NavigationView.PaneHeader>
            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12" />
                </Grid.RowDefinitions>
                <ui:TextBlock Grid.Row="1"
                              Text="Workflow"
                              FontSize="13"
                              FontWeight="SemiBold"
                              TextAlignment="Center"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center" />
            </Grid>
        </ui:NavigationView.PaneHeader>
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="1. Setup"
                                   Icon="{ui:SymbolIcon Home24}"
                                   TargetPageType="{x:Type local:SpaceMapperStepSetupPage}" />
            <ui:NavigationViewItem Content="2. Zones &amp; Targets"
                                   Icon="{ui:SymbolIcon Library24}"
                                   TargetPageType="{x:Type local:SpaceMapperStepZonesTargetsPage}" />
            <ui:NavigationViewItem Content="3. Processing"
                                   Icon="{ui:SymbolIcon Settings24}"
                                   TargetPageType="{x:Type local:SpaceMapperStepProcessingPage}" />
            <ui:NavigationViewItem Content="4. Attribute Mapping"
                                   Icon="{ui:SymbolIcon AppFolder24}"
                                   TargetPageType="{x:Type local:SpaceMapperStepMappingPage}" />
            <ui:NavigationViewItem Content="5. Results"
                                   Icon="{ui:SymbolIcon BezierCurveSquare20}"
                                   TargetPageType="{x:Type local:SpaceMapperStepResultsPage}" />
        </ui:NavigationView.MenuItems>
        <ui:NavigationView.Header>
            <StackPanel>
                <ui:Card Margin="12"
                         Padding="10"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <ui:TextBlock Text="Space Mapper" FontSize="16" FontWeight="SemiBold" />
                            <ui:TextBlock Text="Follow the steps on the left to configure zones, targets, and mappings."
                                          Margin="0,4,0,0"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Margin="12,0,0,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Top">
                            <ui:Button x:Name="RunSpaceMapperButtonControl"
                                       Margin="0,0,8,0"
                                       ToolTip="Run Space Mapper">
                                <TextBlock Text="Run Space Mapper" />
                            </ui:Button>
                            <ui:Button x:Name="RefreshSetsButtonControl"
                                       ToolTip="Refresh selection and search set lists">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="ArrowSync20" Margin="0,0,6,0" />
                                    <TextBlock Text="Refresh Sets" />
                                </StackPanel>
                            </ui:Button>
                        </StackPanel>
                    </Grid>
                </ui:Card>
                <Border Height="1"
                        Margin="12,0,12,0"
                        Background="#FFFFFFFF" />
            </StackPanel>
        </ui:NavigationView.Header>
    </ui:NavigationView>
</UserControl>
