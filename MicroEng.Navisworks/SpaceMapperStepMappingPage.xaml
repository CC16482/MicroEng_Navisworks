<Page x:Class="MicroEng.Navisworks.SpaceMapperStepMappingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:MicroEng.Navisworks"
      xmlns:system="clr-namespace:System;assembly=System"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="900"
      Background="Transparent"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.VerticalScrollBarVisibility="Disabled"
      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
      FontSize="12">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{x:Static local:MicroEngResourceUris.WpfUiRoot}" />
      </ResourceDictionary.MergedDictionaries>
      <system:Double x:Key="ControlContentThemeFontSize">12</system:Double>
      <x:Array x:Key="WriteModes" Type="{x:Type local:WriteMode}">
        <local:WriteMode>Overwrite</local:WriteMode>
        <local:WriteMode>OnlyIfBlank</local:WriteMode>
        <local:WriteMode>Append</local:WriteMode>
      </x:Array>
      <x:Array x:Key="CombineModes" Type="{x:Type local:MultiZoneCombineMode}">
        <local:MultiZoneCombineMode>First</local:MultiZoneCombineMode>
        <local:MultiZoneCombineMode>Concatenate</local:MultiZoneCombineMode>
        <local:MultiZoneCombineMode>Min</local:MultiZoneCombineMode>
        <local:MultiZoneCombineMode>Max</local:MultiZoneCombineMode>
        <local:MultiZoneCombineMode>Average</local:MultiZoneCombineMode>
      </x:Array>
      <Style x:Key="HelpToggleButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="18" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PropertyPickerButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
        <Setter Property="Width" Value="28" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
      </Style>
    </ResourceDictionary>
  </Page.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <ui:Card Grid.Row="0"
             Padding="10"
             Margin="0,0,0,8"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
      <StackPanel>
        <ui:TextBlock Text="Step 4 - Attribute Mapping" FontSize="16" FontWeight="SemiBold" />
        <ui:TextBlock Text="Map zone properties onto target elements and choose write behavior."
                      Margin="0,4,0,0"
                      FontSize="12"
                      Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
      </StackPanel>
    </ui:Card>

    <ui:Card Grid.Row="1"
             Padding="10"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             VerticalAlignment="Top">
      <StackPanel>
        <ui:TextBlock Text="Mapping Builder" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6" />

        <Grid Margin="0,0,0,8">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Mapping Name:" VerticalAlignment="Center" />
              <Button x:Name="MappingNameHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="MappingNameHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="Friendly name shown in the mapping list." />
              </ui:Flyout>
            </StackPanel>
            <TextBox x:Name="MappingNameBoxControl" Grid.Column="1" MinWidth="180" Text="Zone Name" />
          </Grid>

          <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Zone Category:" VerticalAlignment="Center" />
              <Button x:Name="ZoneCategoryHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="ZoneCategoryHelpFlyout" Placement="Top">
                <TextBlock Width="260"
                           TextWrapping="Wrap"
                           Text="Property category on the zone (e.g. Zone, Element, Revit Data)." />
              </ui:Flyout>
            </StackPanel>
            <TextBox x:Name="ZoneCategoryBoxControl" Grid.Column="1" MinWidth="200" Text="Zone" />
          </Grid>

          <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Zone Property:" VerticalAlignment="Center" />
              <Button x:Name="ZonePropertyHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="ZonePropertyHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="Property name to read from the zone (e.g. Name)." />
              </ui:Flyout>
            </StackPanel>
            <Grid Grid.Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBox x:Name="ZonePropertyBoxControl" Grid.Column="0" MinWidth="180" Text="Name" />
              <ui:Button x:Name="ZonePropertyPickerButtonControl"
                         Grid.Column="1"
                         Margin="6,0,0,0"
                         Appearance="Secondary"
                         Style="{StaticResource PropertyPickerButtonStyle}"
                         ToolTip="Pick from scraped properties">
                <ui:SymbolIcon Symbol="Search20" />
              </ui:Button>
              <ui:Flyout x:Name="ZonePropertyPickerFlyoutControl"
                         Grid.Column="1"
                         Placement="Bottom">
                <Grid Width="300"
                      MaxHeight="320">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                  </Grid.RowDefinitions>
                  <ui:TextBlock Grid.Row="0"
                                Text="Zone Property Picker"
                                FontSize="12"
                                FontWeight="SemiBold" />
                  <ui:TextBlock x:Name="ZonePropertyPickerStatusTextControl"
                                Grid.Row="1"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="No Data Scraper session selected." />
                  <TreeView x:Name="ZonePropertyTreeViewControl"
                            Grid.Row="3"
                            Margin="0,6,0,0"
                            BorderThickness="0"
                            Background="Transparent">
                    <TreeView.ItemContainerStyle>
                      <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                      </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                      <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                      </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                  </TreeView>
                </Grid>
              </ui:Flyout>
            </Grid>
          </Grid>

          <Grid Grid.Row="1" Grid.Column="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Target Category:" VerticalAlignment="Center" />
              <Button x:Name="TargetCategoryHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="TargetCategoryHelpFlyout" Placement="Top">
                <TextBlock Width="260"
                           TextWrapping="Wrap"
                           Text="Property category on the target element (default ME_SpaceInfo)." />
              </ui:Flyout>
            </StackPanel>
            <TextBox x:Name="TargetCategoryBoxControl" Grid.Column="1" MinWidth="200" Text="ME_SpaceInfo" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Target Property:" VerticalAlignment="Center" />
              <Button x:Name="TargetPropertyHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="TargetPropertyHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="Property name to write on the target element." />
              </ui:Flyout>
            </StackPanel>
            <TextBox x:Name="TargetPropertyBoxControl" Grid.Column="1" MinWidth="180" Text="Zone Name" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Write Mode:" VerticalAlignment="Center" />
              <Button x:Name="WriteModeHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="WriteModeHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="Overwrite, only if blank, or append to existing values." />
              </ui:Flyout>
            </StackPanel>
            <ComboBox x:Name="WriteModeComboBoxControl"
                      Grid.Column="1"
                      MinWidth="180"
                      SelectedIndex="0"
                      ItemsSource="{StaticResource WriteModes}" />
          </Grid>

          <Grid Grid.Row="3" Grid.Column="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Multi-Zone:" VerticalAlignment="Center" />
              <Button x:Name="MultiZoneHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="MultiZoneHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="How multiple zone values are combined when a target matches more than one zone." />
              </ui:Flyout>
            </StackPanel>
            <ComboBox x:Name="MultiZoneComboBoxControl"
                      Grid.Column="1"
                      MinWidth="180"
                      SelectedIndex="0"
                      ItemsSource="{StaticResource CombineModes}" />
          </Grid>

          <Grid Grid.Row="3" Grid.Column="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Append Separator:" VerticalAlignment="Center" />
              <Button x:Name="AppendSeparatorHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="AppendSeparatorHelpFlyout" Placement="Top">
                <TextBlock Width="240"
                           TextWrapping="Wrap"
                           Text="Separator used when appending or combining multiple values." />
              </ui:Flyout>
            </StackPanel>
            <TextBox x:Name="AppendSeparatorBoxControl" Grid.Column="1" MinWidth="180" Text=", " />
          </Grid>

          <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
              <TextBlock Text="Editable:" VerticalAlignment="Center" />
              <Button x:Name="EditableHelpToggle" Style="{StaticResource HelpToggleButtonStyle}">
                <ui:SymbolIcon Symbol="Info16" />
              </Button>
              <ui:Flyout x:Name="EditableHelpFlyout" Placement="Top">
                <TextBlock Width="220"
                           TextWrapping="Wrap"
                           Text="Allow this mapping to be edited in the grid." />
              </ui:Flyout>
            </StackPanel>
            <CheckBox x:Name="EditableCheckBoxControl" Grid.Column="1" VerticalAlignment="Center" IsChecked="True" />
          </Grid>
        </Grid>

        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <ui:Button x:Name="AddMappingButtonControl" Content="Add Mapping" Margin="0,0,6,0" />
            <ui:Button x:Name="DeleteMappingButtonControl" Content="Delete Mapping" Margin="0,0,6,0" />
            <ui:Button x:Name="SaveTemplateButtonControl" Content="Save Template" Margin="0,0,6,0" />
            <ui:Button x:Name="LoadTemplateButtonControl" Content="Load Template" />
          </StackPanel>

          <ui:DataGrid x:Name="MappingGridControl"
                       Grid.Row="1"
                       AutoGenerateColumns="False"
                       CanUserAddRows="False"
                       CanUserDeleteRows="False"
                       ItemsSource="{Binding Mappings}"
                       HeadersVisibility="Column"
                       GridLinesVisibility="All"
                       HorizontalGridLinesBrush="{DynamicResource MicroEngDataGridGridLineBrush}"
                       VerticalGridLinesBrush="{DynamicResource MicroEngDataGridGridLineBrush}"
                       FontSize="12"
                       RowHeight="28"
                       ColumnHeaderHeight="30"
                       EnableRowVirtualization="True"
                       EnableColumnVirtualization="True"
                       VirtualizingPanel.IsVirtualizing="True"
                       VirtualizingPanel.VirtualizationMode="Recycling"
                       IsReadOnly="False">
            <ui:DataGrid.Columns>
              <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120" />
              <DataGridTextColumn Header="Zone Category" Binding="{Binding ZoneCategory}" Width="140" />
              <DataGridTextColumn Header="Zone Property" Binding="{Binding ZonePropertyName}" Width="140" />
              <DataGridTextColumn Header="Target Category" Binding="{Binding TargetCategory}" Width="140" />
              <DataGridTextColumn Header="Target Property" Binding="{Binding TargetPropertyName}" Width="140" />
              <DataGridComboBoxColumn Header="Write Mode"
                                      SelectedItemBinding="{Binding WriteMode}"
                                      Width="120"
                                      ItemsSource="{StaticResource WriteModes}" />
              <DataGridComboBoxColumn Header="Multi-Zone"
                                      SelectedItemBinding="{Binding MultiZoneCombineMode}"
                                      Width="120"
                                      ItemsSource="{StaticResource CombineModes}" />
              <DataGridTextColumn Header="Append Separator" Binding="{Binding AppendSeparator}" Width="120" />
              <DataGridCheckBoxColumn Header="Editable" Binding="{Binding IsEditable}" Width="70" />
            </ui:DataGrid.Columns>
          </ui:DataGrid>
        </Grid>
      </StackPanel>
    </ui:Card>
  </Grid>
</Page>
