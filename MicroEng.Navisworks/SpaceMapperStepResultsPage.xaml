<Page x:Class="MicroEng.Navisworks.SpaceMapperStepResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:MicroEng.Navisworks"
      xmlns:system="clr-namespace:System;assembly=System"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="900"
      Background="Transparent"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      FontSize="12"
      ScrollViewer.VerticalScrollBarVisibility="Disabled"
      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

  <Page.Resources>
    <ResourceDictionary>
      <system:Double x:Key="ControlContentThemeFontSize">12</system:Double>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{x:Static local:MicroEngResourceUris.WpfUiRoot}" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <ui:Card Grid.Row="0"
             Padding="10"
             Margin="0,0,0,8"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
      <StackPanel>
        <ui:TextBlock Text="Step 5 - Results" FontSize="16" FontWeight="SemiBold" />
        <ui:TextBlock Text="Review tagged results and export statistics."
                      Margin="0,4,0,0"
                      FontSize="12"
                      Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
      </StackPanel>
    </ui:Card>

    <ui:Card Grid.Row="1"
             Padding="10"
             Margin="0,0,0,8"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel>
          <ui:TextBlock Text="Run Summary" FontSize="13" FontWeight="SemiBold" />
          <TextBox x:Name="ResultsSummaryBoxControl"
                   Margin="0,6,0,0"
                   Text="Ready"
                   IsReadOnly="True"
                   AcceptsReturn="True"
                   VerticalScrollBarVisibility="Auto" />
          <WrapPanel x:Name="RunHealthChipPanelControl"
                     Margin="0,6,0,0"
                     Visibility="Collapsed">
            <Border x:Name="RunHealthMissingBoundsChipControl"
                    Background="{DynamicResource ControlFillColorTertiaryBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="6,2"
                    Margin="0,0,6,0"
                    Visibility="Collapsed">
              <TextBlock x:Name="RunHealthMissingBoundsTextControl"
                         Text="Missing bounds: 0"
                         FontSize="11" />
            </Border>
            <Border x:Name="RunHealthUnmatchedChipControl"
                    Background="{DynamicResource ControlFillColorTertiaryBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="6,2"
                    Margin="0,0,6,0"
                    Visibility="Collapsed">
              <TextBlock x:Name="RunHealthUnmatchedTextControl"
                         Text="Unmatched targets: 0"
                         FontSize="11" />
            </Border>
            <ui:Button x:Name="RunHealthDetailsButtonControl"
                       Content="Details"
                       Appearance="Secondary"
                       Padding="8,2"
                       Visibility="Collapsed" />
          </WrapPanel>
          <ui:Flyout x:Name="RunHealthDetailsFlyoutControl" Placement="Bottom">
            <StackPanel Width="340">
              <ui:TextBlock Text="Run Health"
                            FontSize="12"
                            FontWeight="SemiBold" />
              <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,6,2" Text="Targets total:" />
                <TextBlock x:Name="RunHealthTargetsTotalTextControl" Grid.Row="0" Grid.Column="1" />
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,6,2" Text="Targets with bounds:" />
                <TextBlock x:Name="RunHealthTargetsWithBoundsTextControl" Grid.Row="1" Grid.Column="1" />
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,6,2" Text="Targets without bounds:" />
                <TextBlock x:Name="RunHealthTargetsWithoutBoundsTextControl" Grid.Row="2" Grid.Column="1" />
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,6,2" Text="Targets sampled:" />
                <TextBlock x:Name="RunHealthTargetsSampledTextControl" Grid.Row="3" Grid.Column="1" />
                <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,6,2" Text="Sample skipped (no bounds):" />
                <TextBlock x:Name="RunHealthTargetsSampleNoBoundsTextControl" Grid.Row="4" Grid.Column="1" />
                <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,6,2" Text="Sample skipped (no geometry):" />
                <TextBlock x:Name="RunHealthTargetsSampleNoGeometryTextControl" Grid.Row="5" Grid.Column="1" />
                <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,0,6,0" Text="Unmatched targets:" />
                <TextBlock x:Name="RunHealthTargetsUnmatchedTextControl" Grid.Row="6" Grid.Column="1" />
              </Grid>
              <TextBlock x:Name="RunHealthImpactTextControl"
                         Margin="0,6,0,0"
                         FontSize="11"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                         TextWrapping="Wrap" />
              <StackPanel Margin="0,8,0,0">
                <ui:Button x:Name="RunHealthCreateMissingBoundsButtonControl"
                           Content="Create Selection Set: Missing Bounds"
                           Appearance="Secondary"
                           Padding="8,3"
                           Margin="0,0,0,4"
                           Visibility="Collapsed" />
                <ui:Button x:Name="RunHealthCreateUnmatchedButtonControl"
                           Content="Create Selection Set: Unmatched Targets"
                           Appearance="Secondary"
                           Padding="8,3"
                           Visibility="Collapsed" />
              </StackPanel>
            </StackPanel>
          </ui:Flyout>
        </StackPanel>

        <ui:Button x:Name="ExportStatsButtonControl"
                   Grid.Column="1"
                   Content="Export Stats to CSV"
                   Margin="12,0,0,0"
                   VerticalAlignment="Top" />
      </Grid>
    </ui:Card>

    <ui:Card Grid.Row="2"
             Padding="0"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalAlignment="Stretch"
             VerticalContentAlignment="Stretch">
      <ui:DataGrid x:Name="ResultsGridControl"
                   AutoGenerateColumns="False"
                   CanUserAddRows="False"
                   CanUserDeleteRows="False"
                   ItemsSource="{Binding ZoneSummaries}"
                   HeadersVisibility="Column"
                   GridLinesVisibility="All"
                   HorizontalGridLinesBrush="{DynamicResource MicroEngDataGridGridLineBrush}"
                   VerticalGridLinesBrush="{DynamicResource MicroEngDataGridGridLineBrush}"
                   FontSize="12"
                   RowHeight="28"
                   ColumnHeaderHeight="30"
                   EnableRowVirtualization="True"
                   EnableColumnVirtualization="True"
                   VirtualizingPanel.IsVirtualizing="True"
                   VirtualizingPanel.VirtualizationMode="Recycling"
                   IsReadOnly="True">
        <ui:DataGrid.Columns>
          <DataGridTextColumn Header="Zone" Binding="{Binding ZoneName}" Width="200" />
          <DataGridTextColumn Header="Contained" Binding="{Binding ContainedCount}" Width="100" />
          <DataGridTextColumn Header="Partial" Binding="{Binding PartialCount}" Width="100" />
        </ui:DataGrid.Columns>
      </ui:DataGrid>
    </ui:Card>
  </Grid>
</Page>
