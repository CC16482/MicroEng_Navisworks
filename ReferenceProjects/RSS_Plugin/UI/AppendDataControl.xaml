<UserControl x:Class="AppendDataTool.UI.AppendDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AppendDataTool.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700" Background="#FFE5E5E5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="10"/>   <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Source="/Images/1_RSS Logo.jpg" Height="60" Margin="5,5,5,5"
               HorizontalAlignment="Center"
               Stretch="Uniform"/> <Image Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
               Source="/Images/2_NavTools.png" Height="40" Margin="5,5,5,5"
               HorizontalAlignment="Center"
               Stretch="Uniform"/> <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Append Data Tool"
                   FontSize="16" HorizontalAlignment="Center" Margin="5,0,5,10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Custom Tab Name:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="TabNameTextBox" Margin="5" Padding="2"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Parameter Display Name:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="ParamDisplayNameTextBox" Margin="5" Padding="2"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Parameter Internal Name:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="ParamInternalNameTextBox" Margin="5" Padding="2" ToolTip="Programmatic name, no spaces or special characters recommended (e.g., MyParam_1)."/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Parameter Value:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1" x:Name="ParamValueTextBox" Margin="5" Padding="2"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Data Type:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="ParamDataTypeComboBox" Margin="5" Padding="2">
            <ComboBoxItem Content="String" IsSelected="True"/>
            <ComboBoxItem Content="Integer"/>
            <ComboBoxItem Content="Double"/>
            <ComboBoxItem Content="Boolean (True/False)"/>
        </ComboBox>

        <Button Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" x:Name="AddDataButton" Content="Add Data to Selected Object(s)" Margin="5,10,5,5" Padding="5" Click="AddDataButton_Click"/>

        <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" x:Name="StatusTextBlock" Margin="5" TextWrapping="Wrap" Foreground="Gray" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Text="Note: Select object(s) in Navisworks before clicking 'Add Data'." FontStyle="Italic" Margin="5" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>